@model datafirst.Models.Author
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Yazar ekleme sayfası
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                            <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                            <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form>
                    @using (Html.BeginForm("Create", "AuthorAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <label for="email_address">Yazar Resmi</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="file" id="file" name="File" accept=".jpg,.JPG,.png,.PNG,.JPEG" class="form-control">
                            </div>
                        </div>

                        <label for="email_address">Ad Soyad</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                            </div>
                        </div>
                        <label for="password">Email</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                            </div>
                        </div>

                        <label for="password">Yazar Hakkında</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                            </div>
                        </div>

                        <label for="password">Şifre</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.RadioButton("Role", "Admin", new { @checked = true, @id = "male" })
                            @*<input type="radio" name="gender" id="male" class="with-gap">*@
                            <label for="male">Admin</label>

                            @Html.RadioButton("Role", "User", new { @checked = true, @id = "user" })
                            <label for="female" class="m-l-20">User</label>
                        </div>
                        <br>
                        <div>
                            <button type="button" class="btn btn-success m-t-15 waves-effect">Yazar Kaydet</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

